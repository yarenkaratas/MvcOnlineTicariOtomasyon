@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">

    <tr>
        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FaturaID</td>
            <td>@x.FaturaSeriNo</td>
            <td>@x.FaturaSıraNo</td>
            <td>@x.VergiDairesi</td>
            <td>@x.FaturaTarih</td>
            <td>@x.Saat</td>
            <td>100</td>
            <td>@x.TeslimEden</td>
            <td>@x.TeslimAlan</td>
            <td><a href="/Fatura/FaturaGetir/@x.FaturaID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Fatura/FaturaDetay/@x.FaturaID" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Departman Ekle</a>
