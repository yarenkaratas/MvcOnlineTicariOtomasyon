@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using(Html.BeginForm("Index","Urun",FormMethod.Get))
            {
                <p>
                    Ürün Adı: @Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }
<br />
<table class="table table-bordered">
    <tr>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>SATIŞ YAP</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.UrunAd</td>
            <td>@x.Marka</td>
            <td>@x.Stok</td>
            <td>@x.AlısFiyat ₺</td>
            <td>@x.SatısFiyat ₺</td>
            <td>@x.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunSil/@x.UrunID " class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@x.UrunID " class="btn btn-success">Güncelle</a></td>
            <td><a href="/Urun/SatisYap/@x.UrunID " class="btn btn-default" style="background-color:#1586d7">Satış Yap</a></td>
        </tr>
    }

</table>
<a href="/Urun/YeniUrun/" class="btn btn-info">Yeni Ürün</a>

